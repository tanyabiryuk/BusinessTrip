@model BusinessTrip.ViewModels.ChangePasswordViewModel
@using System.Security.Claims
@using System.Linq;
@{
    ViewData["Title"] = "Змінити пароль";
    if (((ClaimsIdentity)User.Identity).Claims
                    .Where(c => c.Type == ClaimTypes.Role)
                    .Select(c => c.Value).Where(r => r == "admin").Count() != 0) { Layout = "~/Views/Shared/_AdminLayout.cshtml"; }
    else { Layout = "~/Views/Shared/_Layout.cshtml"; }
}


<section>
    <h2>Змінити пароль  {0}, @Model.Email</h2>
    <form asp-action="ChangePassword" asp-controller="Users">
        <div asp-validation-summary="All" class="text-danger"></div>

        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="Email" />
        <div class="form-group">
            <label asp-for="OldPassword" class="control-label">Старий пароль</label><br />
            <input class="textbox" type="text" asp-for="OldPassword" />
        </div>
        <div class="form-group">
            <label asp-for="NewPassword" class="control-label">Новий пароль</label><br />
            <input class="textbox" type="text" asp-for="NewPassword" />
        </div><br />
        <div class="form-group">
            <input type="submit" value="Зберегти" class="submit" />
        </div>
    </form>

</section>
