@model BusinessTrip.ViewModels.RegisterModel
@using System.Security.Claims
@using System.Linq;
@{
    if (((ClaimsIdentity)User.Identity).Claims
                    .Where(c => c.Type == ClaimTypes.Role)
                    .Select(c => c.Value).Where(r => r == "admin").Count() != 0) { Layout = "~/Views/Shared/_AdminLayout.cshtml"; }
    else { Layout = "~/Views/Shared/_Layout.cshtml"; }
}

    <section>
        <h2>Реєстрація нового користувача</h2>

        <form asp-action="Register" asp-controller="Account" asp-anti-forgery="true">
            <div class="validation" asp-validation-summary="ModelOnly" />
            <div>
                <div>
                    <label asp-for="Email">Електронна адреса</label><br />
                    <input type="text" asp-for="Email" /><br />
                    <span asp-validation-for="Email"></span>
                </div>
                <div>
                    <label asp-for="LastName">Прізвище</label><br />
                    <input type="text" asp-for="LastName" /><br />
                    <span asp-validation-for="LastName"></span>
                </div>
                <div>
                    <label asp-for="FirstName">Ім'я</label><br />
                    <input type="text" asp-for="FirstName" /><br />
                    <span asp-validation-for="FirstName"></span>
                </div>
                <div>
                    <label asp-for="FatherName">Побатькові</label><br />
                    <input type="text" asp-for="FatherName" /><br />
                    <span asp-validation-for="FatherName"></span>
                </div>
                <div>
                    <label asp-for="Password">Введіте пароль</label><br />
                    <input asp-for="Password" /><br />
                    <span asp-validation-for="Password"></span>
                </div>
                <div>
                    <label asp-for="ConfirmPassword">Підтвердіть пароль</label><br />
                    <input asp-for="ConfirmPassword" /><br />
                    <span asp-validation-for="ConfirmPassword"></span>
                </div>
                <div>
                    <input type="submit" value="Зареєструвати користувача" />
                </div>
            </div>
        </form>
    </section>
