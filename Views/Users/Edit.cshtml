@model BusinessTrip.ViewModels.EditUserViewModel
@using System.Security.Claims
@using System.Linq;
@{
    ViewData["Title"] = "Редагувати";
    if (((ClaimsIdentity)User.Identity).Claims
                    .Where(c => c.Type == ClaimTypes.Role)
                    .Select(c => c.Value).Where(r => r == "admin").Count() != 0) { Layout = "~/Views/Shared/_AdminLayout.cshtml"; }
    else { Layout = "~/Views/Shared/_Layout.cshtml"; }
}

<section>
    <form asp-action="Edit" asp-controller="Users">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <input type="hidden" asp-for="Id" />
        </div>
        <div class="form-group">
            <label asp-for="LastName" class="control-label">Прізвище</label><br />
            <input type="text" asp-for="LastName" class="textbox" />
        </div>
        <div class="form-group">
            <label asp-for="FirstName" class="control-label">Ім'я</label><br />
            <input type="text" asp-for="FirstName" class="textbox" />
        </div><br />
        <div class="form-group">
            <label asp-for="FatherName" class="control-label">Побатькові</label><br />
            <input type="text" asp-for="FatherName" class="textbox" />
        </div><br />
        <div class="form-group">
            <input class="submit" type="submit" value="Зберегти" />
        </div>
    </form>

</section>

