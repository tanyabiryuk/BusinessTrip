@model BusinessTrip.Models.Application
@{
    Layout = null;
}
@using System.Security.Claims
@using System.Linq;
@{
    ViewData["Title"] = "Редагувати";
    if (((ClaimsIdentity)User.Identity).Claims
                    .Where(c => c.Type == ClaimTypes.Role)
                    .Select(c => c.Value).Where(r => r == "admin").Count() != 0) { Layout = "~/Views/Shared/_AdminLayout.cshtml"; }
    else { Layout = "~/Views/Shared/_Layout.cshtml"; }
}
<div>
    <p align="right">Ректору</p>
    <p align="right">Львівського національного</p>
    <p align="right">університету</p>
    <p align="right">імені Івана Франка</p>
    <p align="right">проф. Мельнику В. П. </p>
    <p align="right">@Html.DisplayFor(m => m.Main_place_of_work)</p>
    <p align="right">@Html.DisplayFor(m => m.Position_in_combination) </p>
    <p align="right">@Html.DisplayFor(m => m.Fullname) </p>
    <p align="center">Заява</p>
    <p align="center">
        Прошу вас відрядити мене @Html.DisplayFor(m => m.Saving_salary) y @Html.DisplayFor(m => m.Trip_city) з
        метою @Html.DisplayFor(m => m.Purpose)
    </p>

