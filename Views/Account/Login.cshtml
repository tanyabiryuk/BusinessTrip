@model BusinessTrip.ViewModels.LoginModel
@Html.ValidationSummary(true)

    <section>
        <h2>Долучитися до <b>Business<i>Trip</i></b></h2>
        <p>Щоб створити заявку потрібно долучитись до <b>Business<i>Trip</i></b></p>
        @*<a asp-action="Register" asp-controller="Account">Реєстрація</a>*@

        <form asp-action="Login" asp-controller="Account" asp-anti-forgery="true">
            <div class="validation" asp-validation-summary="ModelOnly" />
            <div>
                <div class="form-group">
                    <label asp-for="Email">Електронна адреса</label><br />
                    <input type="text" asp-for="Email" /><br />
                    <span asp-validation-for="Email"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password">Пароль</label><br />
                    <input asp-for="Password" /><br />
                    <span asp-validation-for="Password"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Долучитись" class="btn btn-outline-dark" />
                </div>
                <div class="form-group">
                    <a asp-action="ForgotPassword" asp-controller="Account">Не можеш долучитись?</a>
                </div>
            </div>
        </form>
    </section>
