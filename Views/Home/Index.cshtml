@using System.Security.Claims
@using System.Linq;
@{
    ViewData["Title"] = "BusinessTrip";
}

<section>
    @if (User.Identity.IsAuthenticated)
    {
        if (((ClaimsIdentity)User.Identity).Claims
                    .Where(c => c.Type == ClaimTypes.Role)
                    .Select(c => c.Value).Where(r => r == "admin").Count() != 0) { Layout = "~/Views/Shared/_AdminLayout.cshtml"; }
        else { Layout = "~/Views/Shared/_Layout.cshtml"; }
    }

    <body>
        <div class="text-center">
            <h1 class="display-4" style="font-size:200%">
                <span>
                    Create Your  <b>Business<i>Trip</i></b><br />application
                </span>
            </h1>

            <p>
                BusinessTrip - це платформа для студентів та викладачів
                Львівського національнрго університету імені Івана Франка.<br />
                За допомогою <b>Business<i>Trip</i></b> Ви можете оформити заявку на відрядження
                онлайн всього за кілька хвилин.<br />
                Тепер для цього не треба оббивати пороги університету.<br />
            </p><br />
            <br/>
            <a class="btn" asp-action="Create" asp-controller="Applications">Розпочати</a>
        </div>
    </body>
</section>








